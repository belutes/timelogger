<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:TimeLogger.App.ViewModels"
        xmlns:home="using:TimeLogger.App.Features.Home.Views"
        xmlns:analysis="using:TimeLogger.App.Features.DataAnalysis.Views"
        mc:Ignorable="d"
        x:Class="TimeLogger.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Width="1180"
        Height="760"
        MinWidth="980"
        MinHeight="640"
        Title="Daily Time Log"
        Background="#000000"
        Foreground="#F0F0F0">

  <Window.Styles>
    <Style Selector="TabControl#MainTabs TabStrip">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="Margin" Value="18,6,0,0" />
    </Style>

    <Style Selector="TabItem">
      <Setter Property="FontSize" Value="18" />
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="Padding" Value="0" />
      <Setter Property="Margin" Value="0,0,18,0" />
      <Setter Property="Foreground" Value="#A9A9A9" />
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderBrush" Value="Transparent" />
    </Style>

    <Style Selector="TabItem:selected">
      <Setter Property="Foreground" Value="#F4F4F4" />
    </Style>

    <Style Selector="Button.pill">
      <Setter Property="Background" Value="#4A4A4A" />
      <Setter Property="Foreground" Value="#F5F5F5" />
      <Setter Property="BorderBrush" Value="#4A4A4A" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="6" />
      <Setter Property="Padding" Value="12,5" />
      <Setter Property="FontSize" Value="13" />
      <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="TextBlock">
      <Setter Property="FontSize" Value="13" />
    </Style>

    <Style Selector="ComboBox, TextBox, DatePicker, CalendarDatePicker">
      <Setter Property="FontSize" Value="13" />
    </Style>
  </Window.Styles>

  <TabControl Name="MainTabs" Margin="8,0,8,8" SelectedIndex="{Binding SelectedTabIndex}">
    <TabItem Header="Home">
      <home:HomeView DataContext="{Binding Home}" />
    </TabItem>
    <TabItem Header="Data Analysis">
      <analysis:DataAnalysisView DataContext="{Binding DataAnalysis}" />
    </TabItem>
  </TabControl>
</Window>
