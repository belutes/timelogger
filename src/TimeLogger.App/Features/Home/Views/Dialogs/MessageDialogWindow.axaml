<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TimeLogger.App.Features.Home.Views.Dialogs.MessageDialogWindow"
        Width="420"
        SizeToContent="Height"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="#242424"
        Foreground="#F0F0F0"
        Title="Message">
  <StackPanel Margin="16" Spacing="12">
    <TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap" />
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button x:Name="CancelButton" Content="Cancel" Click="OnCancelClicked" />
      <Button x:Name="ConfirmButton" Content="OK" Click="OnConfirmClicked" />
    </StackPanel>
  </StackPanel>
</Window>
