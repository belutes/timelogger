<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TimeLogger.App.Features.Home.Views.Dialogs.EditEntryDialogWindow"
        Width="500"
        Height="380"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="#242424"
        Foreground="#F0F0F0"
        Title="Edit Entry">
  <Grid Margin="16" RowDefinitions="Auto,Auto,Auto,Auto,*,Auto" RowSpacing="10">
    <TextBlock Text="Task" FontWeight="SemiBold" />
    <TextBox x:Name="TaskTextBox" Grid.Row="1" />

    <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto,*" ColumnSpacing="8">
      <TextBlock Text="Start" VerticalAlignment="Center" />
      <ComboBox x:Name="StartTimeComboBox" Grid.Column="1" Width="150" />
      <TextBlock Text="End" Grid.Column="2" VerticalAlignment="Center" />
      <ComboBox x:Name="EndTimeComboBox" Grid.Column="3" Width="150" />
    </Grid>

    <TextBlock Grid.Row="3" Text="Notes" FontWeight="SemiBold" />
    <TextBox x:Name="NotesTextBox" Grid.Row="4" AcceptsReturn="True" TextWrapping="Wrap" VerticalContentAlignment="Top" />

    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button Content="Cancel" Click="OnCancelClicked" />
      <Button Content="Save" Click="OnSaveClicked" />
    </StackPanel>
  </Grid>
</Window>
