<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TimeLogger.App.Features.Home.Views.Dialogs.CustomTaskDialogWindow"
        Width="430"
        SizeToContent="Height"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="#242424"
        Foreground="#F0F0F0"
        Title="Custom Task">
  <StackPanel Margin="16" Spacing="10">
    <TextBlock Text="Enter custom task name" FontWeight="SemiBold" />
    <TextBox x:Name="TaskNameTextBox" Watermark="Task name" />
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button Content="Cancel" Click="OnCancelClicked" />
      <Button Content="OK" Click="OnOkClicked" />
    </StackPanel>
  </StackPanel>
</Window>
