<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TimeLogger.App.Features.Home.Views.Dialogs.DateRangeDialogWindow"
        Width="470"
        SizeToContent="Height"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="#242424"
        Foreground="#F0F0F0"
        Title="Export Range CSV">
  <StackPanel Margin="16" Spacing="10">
    <TextBlock Text="Select date range to export" FontWeight="SemiBold" />

    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" RowSpacing="8" ColumnSpacing="8">
      <TextBlock Text="Start" VerticalAlignment="Center" />
      <CalendarDatePicker x:Name="StartDatePicker" Grid.Column="1" />

      <TextBlock Grid.Row="1" Text="End" VerticalAlignment="Center" />
      <CalendarDatePicker x:Name="EndDatePicker" Grid.Row="1" Grid.Column="1" />
    </Grid>

    <TextBlock x:Name="ValidationTextBlock" IsVisible="False" Foreground="#FF6B6B" TextWrapping="Wrap" />

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button Content="Cancel" Click="OnCancelClicked" />
      <Button Content="OK" Click="OnOkClicked" />
    </StackPanel>
  </StackPanel>
</Window>
